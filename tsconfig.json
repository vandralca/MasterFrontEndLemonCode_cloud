{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "noLib": false,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./src/",
    "paths": {
      "api": ["api"],
      "assets": ["assets"],
      "layouts": ["layouts"],
      "core": ["core"],
      "scenes": ["scenes"],
      "pods": ["pods"],
      "common": ["common"],
      "models": ["models"],
      "contexts": ["contexts"],
      "pages": ["pages"],
      "services": ["services"],
    }
  },
  "include": ["./src/**/*", "./global.types.d.ts"]
}
